{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@rw-workspace/*": [
        "libs/*"
      ],
      "@rw-workspace/shared/auth": [
        "libs/shared/auth/src/index.ts"
      ]
    }
  },
  "files": [
    "libs/shared/auth/src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}